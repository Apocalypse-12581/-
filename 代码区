void setup() {
  pinMode(voicepin, INPUT);//定义模拟接口A0为输入
  
  display.begin(SSD1306_SWITCHCAPVCC, 0x3C);
  display.setTextColor(WHITE);//开像素点发光
  display.clearDisplay();//清屏

  /*显示封面*/
  //封面_图标
  display.drawBitmap(40, 0, cover_image, 48, 48, 1); 
  //封面_文字_项目
  display.drawBitmap(8, 48, cover_0, 16, 16, 1);
  display.drawBitmap(24, 48, cover_1, 16, 16, 1);
  display.drawBitmap(40, 48, cover_2, 16, 16, 1);
  display.drawBitmap(56, 48, cover_3, 16, 16, 1);
  display.drawBitmap(72, 48, cover_4, 16, 16, 1);
  display.drawBitmap(88, 48, cover_5, 16, 16, 1);
  display.drawBitmap(104, 48, cover_6, 16, 16, 1);
  //封面_文字_成员
  display.drawBitmap(1, 10, cover_left_0, 13, 13, 1);
  display.drawBitmap(14, 10, cover_left_1, 13, 13, 1);
  display.drawBitmap(27, 10, cover_left_2, 13, 13, 1);
  display.drawBitmap(88, 10, cover_right_0, 13, 13, 1);
  display.drawBitmap(101, 10, cover_right_1, 13, 13, 1);
  display.drawBitmap(114, 10, cover_right_2, 13, 13, 1);
  display.display();//开显示
  delay(5000);//延时五秒
  display.clearDisplay();//清屏
}

void loop()   //初始化已经完成了显示
{
  /*显示音量模拟值*/
  val = analogRead(voicepin);//存入来自传感器的数值
  display.setTextSize(1);//设置字体大小
  display.drawBitmap(1, 0, showvoice_0, 14, 14, 1);
  display.drawBitmap(15, 0, showvoice_1, 14, 14, 1);
  display.drawBitmap(29, 0, showvoice_2, 14, 14, 1);
  display.drawBitmap(43, 0, showvoice_3, 14, 14, 1);
  display.drawBitmap(57, 0, showvoice_4, 14, 14, 1);
  display.drawBitmap(71, 0, showvoice_5, 14, 14, 1);
  display.drawBitmap(85, 0, showvoice_6, 14, 14, 1);
  display.setCursor(99, 0);
  display.print(":");
  display.print(val);

  /*图片和文字提示*/
  if(val<=120){
    //图片
    display.drawBitmap(78, 14, image_0, 50, 50, 1);
    //文字
    display.drawBitmap(0, 26, word_1_0, 13, 13, 1);
    display.drawBitmap(13, 26, word_1_1, 13, 13, 1);
    display.drawBitmap(26, 26, word_1_2, 13, 13, 1);
    display.drawBitmap(39, 26, word_1_3, 13, 13, 1);
    display.drawBitmap(0, 39, word_1_4, 13, 13, 1);
    display.drawBitmap(13, 39, word_1_5, 13, 13, 1);
    display.drawBitmap(26, 39, word_1_6, 13, 13, 1);
    display.drawBitmap(39, 39, word_1_7, 13, 13, 1);
    display.drawBitmap(52, 39, word_1_8, 13, 13, 1);
  }
  else if(val<=300){
    //图片
    display.drawBitmap(78, 14, image_1, 50, 50, 1);
    //文字
    display.drawBitmap(0, 26, word_2_0, 13, 13, 1);
    display.drawBitmap(13, 26, word_2_1, 13, 13, 1);
    display.drawBitmap(26, 26, word_2_2, 13, 13, 1);
    display.drawBitmap(39, 26, word_2_3, 13, 13, 1);
    display.drawBitmap(52, 26, word_2_4, 13, 13, 1);
  }
  else if(val>300){
    //图片
    display.drawBitmap(78, 14, image_2, 50, 50, 1);
    //文字
    display.drawBitmap(0, 26, word_3_0, 13, 13, 1);
    display.drawBitmap(13, 26, word_3_1, 13, 13, 1);
    display.drawBitmap(26, 26, word_3_2, 13, 13, 1);
    display.drawBitmap(39, 26, word_3_3, 13, 13, 1);
    display.drawBitmap(52, 26, word_3_4, 13, 13, 1);
    display.drawBitmap(65, 26, word_3_5, 13, 13, 1);
    display.drawBitmap(0, 39, word_3_6, 13, 13, 1);
    display.drawBitmap(13, 39, word_3_7, 13, 13, 1);
    display.drawBitmap(26, 39, word_3_8, 13, 13, 1);
    display.drawBitmap(39, 39, word_3_9, 13, 13, 1);
    display.drawBitmap(52, 39, word_3_10, 13, 13, 1);
    display.drawBitmap(65, 38, word_3_11, 13, 13, 1);
  }
  display.display();//开显示
  delay(3000);//延时两秒
  display.clearDisplay();//清屏
}
